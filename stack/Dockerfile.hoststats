# Host/container stats scraper â€” requires Docker socket + host /proc
FROM python:3.14-slim
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

COPY pyproject.toml README.md MANIFEST.in ./
COPY open_fdd ./open_fdd
RUN pip install --no-cache-dir -e ".[platform,monitoring]"

CMD ["python", "-u", "-m", "open_fdd.platform.drivers.run_host_stats", "--loop"]